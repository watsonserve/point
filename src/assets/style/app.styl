@import './vars.styl'

.animated
  animation-duration 1s
  animation-fill-mode both

@keyframes tolong-sign-in-in
  from
  height 0

  to
  height 196px

@keyframes tolong-sign-up-in
  from
  height 0

  to
  height 352px

@keyframes tolong-sign-in-out
  from
  height 196px

  to
  height 0

@keyframes tolong-sign-up-out
  from
  height 196px

  to
  height 0

.tolong-in
  animation-delay 1s
  animation-name tolong-in

.clear:after
  content ''
  display block
  clear both

.pull-left
  float left

.pull-right
  float right

.btn
  display inline-block
  border 1px solid transparent
  border-radius 4px
  padding 0 4px
  text-align center
  cursor pointer
  transition box-shadow .2s

  &[disabled], &.disabled
    cursor not-allowed
    opacity .6

  &:active, &:focus, &:active:focus
    outline 0

  &.grande
    border-width 2px
    width 100px
    font-size 14px
    line-height 36px 

  &.normal
    width 106px
    font-size 13px
    line-height 34px

  &.tall
    border-width 1px
    width 78px
    font-size 14px
    line-height 28px 

  &.small
    border-width 1px
    width 96px
    font-size 13px
    line-height 26px

  &.mini
    border-width 1px
    width 72px
    font-size 13px
    line-height 24px

  &.micro
    border-width 1px
    width 50px
    font-size 12px
    line-height 20px

  &.gray
    border 1px solid $borderColor
    box-shadow 0 3px 4px 0 $inputShadowColor
    color $fontColor
    background #fff

    &:hover
      box-shadow 0 5px 8px 0 $inputHoverShadowColor

  &.default
    border 1px solid $primaryColor
    box-shadow 0 3px 4px 0 $primaryShadowColor
    color $primaryColor
    background #fff

    &:hover
      box-shadow 0 5px 8px 0 $primaryHoverShadowColor

  &.light
    border-color #dddbe6
    color $primaryColor
    background #fff

    &:hover
      color #1f1e26
      background #dddbe6

  &.primary
    box-shadow 0 3px 4px 0 $primaryShadowColor
    border-color $primaryColor
    color #fff
    background $primaryColor

    &:hover
      box-shadow 0 5px 8px 0 $primaryHoverShadowColor

  &.grande.primary
    box-shadow 0 11px 15px 1px $primaryHoverShadowColor

  &.file-btn
    position relative
    overflow hidden

    .file-input
      position absolute
      top 0
      left 0
      z-index 1
      width 100%
      height 100%
      opacity 0
      font-size 40px

.btn-group
  &.grande .btn
    margin 0 8px

  &.normal .btn
    margin 0 6px

  .btn
    &:first-child
      margin-left 0

    &:last-child
      margin-right 0

  &.pick
    display inline-block
    font-size 0

    .btn
      margin 0
      border-radius 0

      &:first-child
        border-radius 4px 0 0 4px

      &:last-child
        border-radius 0 4px 4px 0

.link
  color $linkColor

.link, .text, .icon
  &.primary
    color $primaryColor

  &.warning
    color #ff9a2d

  &.success
    color #03daaf

/* layout */
#root
  display flex
  position absolute
  width 100%
  min-height 100%
  padding-top $headerHeight
  flex-direction column

  .container-wrapper
    flex 1
    height 100%

footer.public-footer
  padding 4px 0
  text-align center
  color #92a0bf
  font-size 12px

  a.link
    margin 0 4px
    text-decoration underline

/* header */
header.public-header
  position absolute
  top 0
  left 0
  z-index 2
  padding 0 40px
  box-shadow 0 1px 4px 0 rgba(14, 130, 220, .15)
  width 100%
  height $headerHeight
  vertical-align middle
  line-height $headerHeight
  background linear-gradient(to right, #4d5f94, #554d94)

  a.logo
    display inline-block
    margin-right 30px
    width 90px
    height 100%
    vertical-align middle
    line-height $headerHeight

    svg
      vertical-align middle

  a.plaza, nav a.create, nav .message a, nav a.setting, nav a.fav
    display inline-block
    font-size 16px
    vertical-align middle
    line-height 20px

    & > i.icon-font
      vertical-align top
      font-size 16px
      line-height 20px
