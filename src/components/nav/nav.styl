@import '~@/assets/style/vars.styl'

header.public-header
  position absolute
  top 0
  left 0
  z-index 2
  padding 0 40px
  box-shadow 0 1px 4px 0 rgba(14, 130, 220, .15)
  width 100%
  height $headerHeight
  vertical-align middle
  line-height $headerHeight
  background linear-gradient(to right, #4d5f94, #554d94)

  a.logo
    display inline-block
    margin-right 30px
    width 90px
    height 100%
    vertical-align middle
    line-height $headerHeight

    svg
      vertical-align middle

  a.plaza, nav a.create, nav .message a, nav a.setting, nav a.fav
    display inline-block
    font-size 16px
    vertical-align middle
    line-height 20px

    & > i.icon-font
      vertical-align top
      font-size 16px
      line-height 20px
