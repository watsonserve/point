$titleRightPadding = 64px

a.attention-card
  display block
  position relative
  margin 0 auto
  border-radius 4px
  padding 10px 16px 50px
  min-width 360px
  height 144px
  box-shadow 0 8px 18px 0 rgba(41, 104, 152, .26)
  text-align left
  color #333
  background #fff

  &:focus
    text-decoration none

  .title
    position relative
    margin-bottom 6px
    padding-right $titleRightPadding
    width 100%
    overflow hidden
    white-space nowrap
    text-overflow ellipsis

    i, h4
      font-size 18px
      line-height 24px
      vertical-align top

    i.icon-font
      color #5b6d95

    h4
      display inline-block
      font-weight 600

  &:hover .title .remove a
    display inline

  p.update
    margin-bottom 16px
    color #92a0bf
    font-size 12px
