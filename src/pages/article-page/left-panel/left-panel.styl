.left-panel {
    position: relative;
    width: 100%;
    height: 100%;
    margin-left: 0;
    padding: 140px 0 0;

    .space-info {
        position: absolute;
        top: 0;
        left: 0;
        padding-top: 20px;
        width: 100%;
        height: 120px;
        background: #fff;

        em.point {
            display: block;
            width: 50px;
            height: 50px;
            margin: 0 auto 10px;
            font-size: 30px;
            line-height: 50px;
            text-align: center;
            color: #fff;
            border-radius: 100%;
        }
        .space-name {
            display: block;
            margin: 0 auto;
            text-align: center;
            font-weight: normal;
        }

    }

    .features .link {
        display: block;
        padding: 0 20px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        line-height: 32px;

        &.router-link-active {
            color: #fff;
            background: #b6dbf6;
        }
    }
}
