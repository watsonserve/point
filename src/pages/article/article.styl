@import '~@/assets/style/vars.styl'

main.article
  display flex
  flex-direction column
  flex 1
  background #fafafa

  .container-wrapper
    margin 20px auto
    padding 0 20px
    width 1000px
    max-width 100%

    h1, h2, h3, h4, h5, h6
      margin-bottom 12px
      font-weight bold

    p, ul li
      margin-bottom 8px

    ul
      padding-left 2em
      list-style disc

    pre
      padding 8px
      background #eee

    code
      line-height 2em
    